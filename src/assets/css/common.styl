base-black = rgb(36, 40, 42)

.mt-80
  margin-top 80px

.mb-30
  display inline-block
  margin-bottom 30px

.mb-100
  margin-bottom 100px

.mt-plus
  margin-top 40px

  @media (max-width: 768px)
    margin-top 32px

.hide-sp
  @media (max-width: 768px)
    display none

.c-title
  font-size 24px
  font-weight 600
  margin-bottom 40px

  &--center
    text-align center
    font-family 'Zilla Slab'

.c-description
  color #45494B
  margin-top 10px

.c-entry-title
  z-index 2
  position relative

  & > span
    display inline-block
    padding-right 20px
    font-size 20px
    font-weight 600

    & > a
      color #45494B

.c-page-title
  font-size 88px
  font-weight bold
  line-height 1.0

  @media (max-width: 768px)
    font-size 40px

  @media (min-width: 1200px)
    width 960px

.c-top-margin
  margin 164px 80px 0

  @media (max-width: 768px)
    margin 164px 20px 0 20px
  
  @media (min-width: 1200px)
    margin 164px auto 0

.c-centering
  margin 0 80px

  @media (max-width: 768px)
    margin 0 20px

  @media (min-width: 1200px)
    margin 0 auto
    width 960px

.c-shadow
  box-shadow 0px 1px 4px 0px rgba(0,0,0,0.08)

.sub-title
  text-align center
  margin-top 40px
  font-size 16px
  font-weight 400
  line-height 2
  letter-spacing 0.1rem

  @media (max-width: 768px)
    font-size 14px
    margin-top 20px

  @media (min-width: 1200px)
    width 960px

// 背景画像ありヒーローエリア
.hero
  width 100%
  height 80vh
  box-sizing border-box
  font-family "Zilla Slab"
  font-size 64px
  font-weight 600
  line-height 1.0
  color white
  background 50% 50% / cover no-repeat

  @media (max-width: 768px)
    height 480px
    font-size 40px

  &__content
    display flex
    height calc(100% - 90px)
    align-items center
    justify-content center
    flex-direction column
    margin -45px 80px 0
    text-align center

    @media (max-width: 768px)
      margin -40px 20px 0
      height calc(100% - 86px)

    @media (min-width: 1200px)
      margin 0 auto
      width 960px