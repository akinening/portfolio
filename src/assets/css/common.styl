base-black = rgb(36, 40, 42)
cyan-1 = rgba(#80d8d0, 0.2)

.mt-80
  margin-top 80px

.mb-30
  display inline-block
  margin-bottom 30px

.mb-100
  margin-bottom 100px

.mt-minus
  margin-top -40px

  @media (max-width: 768px)
    margin-top -32px

.font-13
  font-size 13px

.c-title
  font-size 24px
  font-weight 600
  margin-bottom 40px

.c-description
  color #45494B
  margin-top 10px

.c-entry-title
  z-index 2
  position relative

  & > span
    display inline-block
    padding-right 20px
    font-size 20px
    font-weight 600

    & > a
      color #45494B

.c-page-title
  font-size 88px
  font-weight bold
  line-height 1.0

  @media (max-width: 768px)
    font-size 40px

  @media (min-width: 1200px)
    width 960px

.c-top-margin
  margin 164px 80px 0

  @media (max-width: 768px)
    margin 164px 20px 0 20px
  
  @media (min-width: 1200px)
    margin 164px auto 0

.c-centering
  margin 0 80px

  @media (max-width: 768px)
    margin 0 20px

  @media (min-width: 1200px)
    margin 0 auto
    width 960px

.c-shadow
  box-shadow 0px 2px 4px 0px rgba(0,0,0,0.1)

// 背景画像ありヒーローエリア
.hero
  width 100%
  height 457px
  margin-top 72px
  padding-top 88px
  box-sizing border-box
  font-size 88px
  font-weight bold
  line-height 1.0
  color white
  background 50% 50% / cover no-repeat

  @media (max-width: 768px)
    height 232px
    padding-top 44px
    font-size 40px

  &__content
    display block
    margin 0 80px

    @media (max-width: 768px)
      margin 0 20px

    @media (min-width: 1200px)
      margin 0 auto
      width 960px