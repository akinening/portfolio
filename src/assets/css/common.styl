.mt-80
  margin-top 80px

.font-13
  font-size 13px

.c-title
  font-size 24px
  font-weight 600
  margin-bottom 40px

.c-description
  color #909294
  margin-top 10px

.c-entries li
  position relative
  margin-bottom 30px

.c-entry-title
  z-index 2
  position relative

  & > span
    display inline-block
    padding-right 20px
    font-size 20px
    font-weight 500
    background-color white

    & > a
      color #45494B

.c-line
  position absolute
  top 0
  right 0
  width 100%
  color #909294
  text-align right
  background-repeat repeat-x
  background-position left center

  & > span
    padding-left 14px
    background-color white

