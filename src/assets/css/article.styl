.skill
  width 100%
  padding 20px
  background-color white
  border-radius 8px
  box-sizing border-box

.title
  font-size 24px
  font-weight 600
  margin-bottom 20px

.description
  line-height 1.8
  margin-bottom 60px

.image
  display block
  width calc(100% - 40px)
  margin 20px
  border-radius 8px

  @media (max-width: 768px)
    width 100%
    margin 20px 0

.top-btn
  display block
  margin-top 20px
  padding 8px 32px
  width fit-content
  border 1px solid rgb(36, 40, 42)
  border-radius 4px
  font-size 13px
  font-weight 700
  color rgb(36, 40, 42)

  &:hover
    opacity 0.6